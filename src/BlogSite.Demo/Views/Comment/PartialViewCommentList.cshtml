@using BlogSite.EntityLayer.Concrete;
@model Blog

<script>

    console.log(@ViewBag.Comments);
</script>


<div class="comment-top">
    @if (ViewBag.Comments!=null )
    {
        <h4>Comments</h4>
        @foreach (var item in (List<Comment>)ViewBag.Comments)
        {
            <div class="media">
                <img src="~/@Model.Writer?.Image" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.UserName</h5>
                    <p>
                        @item.Content
                    </p>
                </div>
            </div>
        }
    }
    else
    {
        <h4>Have not any comments</h4>
    }

</div>