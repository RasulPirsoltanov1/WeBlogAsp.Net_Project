@using BlogSite.EntityLayer.Concrete;
@model Writer

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">About You</h4>
                <div class="d-flex mt-5 align-items-top">
                    <img src="~/@Model.Image" class="img-sm rounded-circle mr-3" alt="image">
                    <div class="mb-0 flex-grow">
                        <h5 class="mr-2 mb-2">@Model.Name</h5>
                        <b style="
    font-family: 'ubuntu-bold';
    font-size: 15px;
    display: block;
    margin: 6px 6px;">   @Model.Country?.Name</b>
                        <p class="mb-0 font-weight-light">  @Model.About</p>
                    </div>
                    <div class="ml-auto">
                        <i class="mdi mdi-heart-outline text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>