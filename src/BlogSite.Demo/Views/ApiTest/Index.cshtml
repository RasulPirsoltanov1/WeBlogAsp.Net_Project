@using BlogSite.Api.Context.Entites;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a class="btn btn-success" asp-action="Add" asp-controller="ApiTest">Add Employee</a>
<h1>Employee List</h1>
@model List<Employee>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td><a class="btn btn-primary" style="color:white;" asp-action="Edit" asp-controller="ApiTest" asp-route-Id="@employee.Id">Edit</a></td>
                <td><a class="btn btn-danger" style="color:white;" asp-action="Delete" asp-route-Id="@employee.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
