@using BlogSite.Demo.Areas.Admin.Models;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@model UserRegisterVM
<section class="main-content-w3layouts-agileits" >
    <div class="container" style="background-color:rgba(0,0,0,0.2); border-radius:1rem; padding:1rem; text-align:center; width:70%;">
        <h3>Register to WebLog</h3>
        <p>Create account to see it in action.</p>
        <form class="m-t" method="post">
            <div style="color:red;" asp-validation-summary="All">

            </div>
            <div class="form-group">
                <input type="text" asp-for="NameSurname" class="form-control" placeholder="NameSurname" required="">
                <span style="color:red;font-size:small;" asp-validation-for="NameSurname"></span>
            </div>
              <div class="form-group">
                <input type="text" asp-for="UserName" class="form-control" placeholder="UserName" required="">
                <span style="color:red;font-size:small;" asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <input type="email" asp-for="Mail" class="form-control" placeholder="Mail" required="">
                <span style="color:red;font-size:small;" asp-validation-for="Mail"></span>
            </div>
             <div class="form-group">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password" required="">
                <span style="color:red;font-size:small;" asp-validation-for="Password"></span>
            </div>
             <div class="form-group">
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" required="">
                <span style="color:red;font-size:small;" asp-validation-for="ConfirmPassword"></span>
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">Register</button>

            <p class="text-muted text-center"><small>Already have an account?</small></p>
            <a class="btn btn-sm btn-white btn-block" href="login.html">Login</a>
        </form>
        <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; @DateTime.UtcNow.Year</small> </p>
    </div>
</section>