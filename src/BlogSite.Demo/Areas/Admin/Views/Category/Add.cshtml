@using BlogSite.EntityLayer.Concrete;
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Category
<div class="ibox ">
    <div class="ibox-title">
        <h5>Add Category</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content">
        <form method="post" asp-action="Add" asp-controller="Category" asp-area="admin">
            <p> Add category for more expirience.</p>
            <div class="form-group row">
                <label class="col-lg-2 col-form-label">Name:</label>
                <div class="col-lg-10">
                    <input type="text" asp-for="Name" placeholder="Category Name..." class="form-control">
                    <span class="form-text m-b-none" style="color:red;" asp-validation-for="Name" ></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-2 col-form-label">Description:</label>
                <div class="col-lg-10">
                    <textarea asp-for="Description" placeholder="Description..." class="form-control"> </textarea>
                    <span class="form-text m-b-none" style="color:red;" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Create</button>
            </div>
        </form>

    </div>
</div>
</div>